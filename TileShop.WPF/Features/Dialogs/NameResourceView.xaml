<Window
    x:Class="TileShop.WPF.Views.NameResourceView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:TileShop.WPF.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:s="https://github.com/canton7/Stylet"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:vm="clr-namespace:TileShop.WPF.ViewModels"
    Title="Name Resource"
    behaviors:RemeasureWindowBehavior.Remeasure="True"
    d:DataContext="{d:DesignInstance Type=vm:NameResourceViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:ThemeManager.IsThemeAware="True"
    ui:WindowHelper.UseModernWindowStyle="True"
    FocusManager.FocusedElement="{Binding ElementName=nameBox}"
    SizeToContent="WidthAndHeight"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox
                x:Name="nameBox"
                MinWidth="220"
                FontSize="20"
                Text="{Binding ResourceName}" />
            <Button
                Margin="5,0,0,0"
                Command="{s:Action Cancel}"
                Content="x"
                FontSize="20"
                Foreground="Red"
                IsCancel="True"
                ToolTip="Cancel" />
            <Button
                Command="{s:Action Confirm}"
                Content="✓"
                FontSize="20"
                Foreground="Green"
                IsDefault="True"
                ToolTip="Confirm" />
        </StackPanel>
    </Grid>
</Window>
