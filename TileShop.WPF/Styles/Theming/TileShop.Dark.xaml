<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019">
    <ui:StaticResource x:Key="iconBrush" ResourceKey="SystemControlForegroundBaseHighBrush" />
    <Pen
        x:Key="iconPen"
        Brush="{DynamicResource iconBrush}"
        Thickness="1" />
    <Pen
        x:Key="iconPenThick"
        Brush="{DynamicResource iconBrush}"
        Thickness="2" />

    <SolidColorBrush
        x:Key="pasteSelectionFillBrush"
        Opacity="0.5"
        Color="Fuchsia" />
    <SolidColorBrush
        x:Key="editSelectionFillBrush"
        Opacity="0.5"
        Color="LawnGreen" />

    <SolidColorBrush
        x:Key="gridLineBrush"
        Opacity="0.8"
        Color="White" />

    <SolidColorBrush
        x:Key="separatorBrush"
        Opacity="0.8"
        Color="White" />
</ResourceDictionary>